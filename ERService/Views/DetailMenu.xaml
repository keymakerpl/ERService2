<UserControl
    x:Class="ERService.Views.DetailMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    prism:ViewModelLocator.AutoWireViewModel="True">

    <Grid Margin="5,15,5,0">
        <syncfusion:MenuAdv ItemsSource="{Binding MenuItems}" Orientation="Vertical">
            <syncfusion:MenuAdv.ItemContainerStyle>
                <Style TargetType="{x:Type syncfusion:MenuItemAdv}">
                    <Setter Property="Command" Value="{Binding Command}" />
                    <Setter Property="Icon" Value="{Binding Icon}" />
                </Style>
            </syncfusion:MenuAdv.ItemContainerStyle>
            <syncfusion:MenuAdv.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding SubItems}">
                    <TextBlock
                        Padding="0,5,0,5"
                        FontWeight="SemiBold"
                        Text="{Binding Text}" />
                </HierarchicalDataTemplate>
            </syncfusion:MenuAdv.ItemTemplate>
        </syncfusion:MenuAdv>
    </Grid>
</UserControl>
