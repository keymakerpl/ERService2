<prism:PrismApplication
    x:Class="ERService.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ERService"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Syncfusion.Themes.FluentLight.WPF;component/Common/Brushes.xaml" />
                <ResourceDictionary Source="/Syncfusion.Themes.FluentLight.WPF;component/MSControl/TextBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="syncfusion:SfTextInputLayout">
                <Setter Property="Margin" Value="5,5,5,0" />
            </Style>
            <Style TargetType="syncfusion:SfTextBoxExt">
                <Setter Property="MinWidth" Value="150" />
                <Setter Property="MaxWidth" Value="150" />
            </Style>
            <Style TargetType="GroupBox">
                <Setter Property="Margin" Value="5" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>
